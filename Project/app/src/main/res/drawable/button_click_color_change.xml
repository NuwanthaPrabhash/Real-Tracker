<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />

            <gradient android:angle="-90" android:endColor="@color/colorBlack" android:startColor="@color/colorBlurBlack" />
        </shape>
    </item>
    <!-- focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <solid android:color="@color/colorBlurBlack" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <gradient android:angle="-90" android:endColor="@color/colorBlurBlack" android:startColor="@color/colorBlurBlack" />
        </shape>
    </item>
</selector>
