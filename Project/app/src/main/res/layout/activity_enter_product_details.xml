<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantone"
    tools:context=".activities.EnterProductDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <!--product name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_color"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/productNameLable"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/product_name" />

                <EditText
                    android:id="@+id/productNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_product_name"/>

            </LinearLayout>

            <!--temperature-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_color"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/temperatureLable"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temperature" />

                <EditText
                    android:id="@+id/temperatureEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/stored_temperature"/>
            </LinearLayout>

            <!--humidity-->
            <!--ardrathawaya-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_color"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/humidityLable"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/humidity" />

                <EditText
                    android:id="@+id/humidityEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_humidity"/>

            </LinearLayout>

            <!--fertilizer-->
            <!--pohora-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_color"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/fertilizerLable"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fertilizer" />

                <EditText
                    android:id="@+id/fertilizerEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_fertilizer"/>

            </LinearLayout>

            <!--farm name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_color"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/farmNameLable"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/farm_name" />

                <EditText
                    android:id="@+id/farmNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_farm_name"/>

            </LinearLayout>

            <!--transport media-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_color"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/transportMediaLable"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/transport_media" />

                <EditText
                    android:id="@+id/transportMediaEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_transport_media"/>

            </LinearLayout>

            <!--weeding type-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_color"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/weedingTypeLable"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/weeding_type" />

                <EditText
                    android:id="@+id/weedingTypeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/enter_weeding_type"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/productDetailsSaveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/submit_button"
                    android:background="@drawable/background_color"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>